<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/black"
    tools:context=".calculator.S_Calculator">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FAFFFFFF"
        android:text=""
        android:textColor="#D8000000"
        android:textSize="30sp"
        android:textAlignment="viewEnd"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text=""
        android:textColor="@color/black"
        android:textAlignment="viewEnd"
        android:gravity="bottom"
        android:background="#FAFFFFFF"
        android:textSize="50dp"
        tools:ignore="RtlCompat"
        android:padding="10dp"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bac"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="AC"
                    android:textSize="30sp"
                    android:textColor="#FF0000"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="C"
                    android:textSize="30sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bb1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="("
                    android:textSize="30sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bb2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=")"
                    android:textSize="30sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bsin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:textSize="23sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bcos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/btan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textSize="21sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/blog"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textSize="21sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bln"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textSize="23sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bfact"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="x!"
                    android:textAllCaps="false"
                    android:textSize="23sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bsquare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="x²"
                    android:textAllCaps="false"
                    android:textSize="23sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bsqrt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="√"
                    android:textSize="23sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/binv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1/x"
                    android:textAllCaps="false"
                    android:textSize="21sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bdiv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="÷"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/b7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/b8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/b9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bmul"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="×"
                    android:textSize="30sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/b4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/b5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/b6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bmin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="30sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/b1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/b2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/b3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bplus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="30sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bpi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="π"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/b0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bdot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:backgroundTint="#000"/>
                <Button
                    android:id="@+id/bequal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="="
                    android:textSize="30sp"
                    android:textColor="#FFA500"
                    android:backgroundTint="#000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>